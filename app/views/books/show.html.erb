
 <div class="container"> 
 <div class="row"> 
  
   <div class="col-lg-3" style="background-color: white;">
  <div class="flexbox">  
 <div class="flex-item"> 
  <h2>User info</h2>
  <div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name <%= @user.name %></h3>
  
   <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
</div>
</div>
</div>


  <div class="flex-item"> 
 <h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4></h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

</div>
</div>
 
 <div class="col-lg-1">
    </div>
    
    




<!-- ユーザーの投稿一覧 -->
<div class="col-lg-8">

  
<h1>Book detail</h1>
<div>
  
 
  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>
 
  <p>投稿ユーザー画像：<%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>name：<%= @book.user.name %></p>

 <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
