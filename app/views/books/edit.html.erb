<div class = "container">
<div class="row">
  
  
  <div class="col-lg-4"></div>
  
  <div class="col-lg-4">
 
  


<h2>Editing Book</h2>
 <%= form_with model: @book do |f| %>

<% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
  <div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
  </div>
  
<% end %>

</div>


<div class="col-lg-4"></div>

</div>
</div>
