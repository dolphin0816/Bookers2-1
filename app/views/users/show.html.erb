 <div class="container"> 
 <div class="row"> 
  
   <div class="col-lg-3" style="background-color: white;">
  <div class="flexbox">  
 <div class="flex-item"> 
  <h2>User info</h2>
  <div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name <%= @user.name %></h3>
  
   <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
</div>
</div>
</div>


  <div class="flex-item"> 
 <h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4></h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

</div>
</div>
 
 <div class="col-lg-1">
    </div>
    
    




<!-- ユーザーの投稿一覧 -->
<div class="col-lg-8">



  <table class="table table-striped">
      <thead>
　<tr>
　　<th></th>
　　<th>Title</th>
　　<th>Opinion</th>
　</tr>
　</thead>
　<% @books.each do |book| %>
    <tbody>
　<tr>
　　<td><%= image_tag book.user.get_profile_image(100,100) %></td>
　　<td><%= link_to book.title, book_path(book.id) %></td>
　　<td><%= book.body %></td>
　</tr>
　</tbody>
　　<% end %>
　</table>
　 </div>
　 </div>
</div>
　 
　 